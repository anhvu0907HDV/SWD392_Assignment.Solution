@page
@model ESS_Store.WebApp.Pages.Admin.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1 class="text-center">Create New Customer</h1>
<div class="row bg-light d-flex justify-content-center">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="User.Username" class="form-label text-primary fw-bold"></label>
                    <input asp-for="User.Username" class="form-control" />
                    <span asp-validation-for="User.Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User.Password" class="form-label text-primary fw-bold"></label>
                    <input asp-for="User.Password" class="form-control" />
                    <span asp-validation-for="User.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User.FullName" class="form-label text-primary fw-bold"></label>
                    <input asp-for="User.FullName" class="form-control" />
                    <span asp-validation-for="User.FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User.Email" class="form-label text-primary fw-bold"></label>
                    <input asp-for="User.Email" class="form-control" />
                    <span asp-validation-for="User.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User.Phone" class="form-label text-primary fw-bold"></label>
                    <input asp-for="User.Phone" class="form-control" />
                    <span asp-validation-for="User.Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User.Address" class="form-label text-primary fw-bold"></label>
                    <input asp-for="User.Address" class="form-control" />
                    <span asp-validation-for="User.Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User.IsDeleted" class="form-label text-primary fw-bold"></label>
                    <input asp-for="User.IsDeleted" class="form-check-input" />
                    <span asp-validation-for="User.IsDeleted" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User.CreatedDate" class="form-label text-primary fw-bold"></label>
                    <input asp-for="User.CreatedDate" class="form-control" />
                    <span asp-validation-for="User.CreatedDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User.RoleId" class="form-label text-primary fw-bold"></label>
                    <select asp-for="User.RoleId" class="form-control" asp-items="ViewBag.RoleId"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
